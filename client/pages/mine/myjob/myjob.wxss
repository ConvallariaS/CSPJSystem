/* pages/mine/myjob/myjob.wxss */
.swiper-tab{
  width: 100%;
  border-bottom: 2rpx solid #eee;
  text-align: center;
  line-height: 80rpx;
}
.swiper-tab-list{
  display: inline-block;
  width: 25%;
  color: #777777;
}
.on{
  border-bottom: 2rpx solid #0a6cbd;
  color: #323232;
}
.swiper-box{
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}
.swiper-box view{
  text-align: center;
}
.apply-swiper-item{
  height: 100%;
}
.applyview{
  height: 100%;
  width: 100%;
}
.joblist{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.applyjob_item{
  width: 100%;
  height: 200rpx;
  border-bottom: 2rpx solid #eee;
  border-top: 2rpx solid #eee;
  margin-top: 50rpx;
  background-color: #cbfcfc;
}
.title_info{
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
}
.info_title{
  flex: 0 0 60%;
  font-size: 42rpx;
  color: #0000ff;
}
.info_price{
  flex: 0 0 40%;
  font-size: 40rpx;
  color: #0000ff;
}
.basic_info{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 30rpx;
}
.info_addr{
  flex: 0 0 60%;
  font-size: 30rpx;
  color: #515151;
}
.info_time{
  flex: 0 0 40%;
  font-size: 30rpx;
  color: #515151;
}